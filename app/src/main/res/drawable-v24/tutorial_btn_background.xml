<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <!-- SHADOW LAYER -->
            <item android:top="4dp">
                <shape android:shape="rectangle">
                    <solid android:color="#AA5345" />
                    <corners android:radius="30dp" />
                </shape>
            </item>
            <!-- CONTENT LAYER -->
            <item android:bottom="5dp" android:right="0dp">
                <shape>
                    <gradient android:centerColor="#FFA294" android:endColor="#F3705A" android:startColor="#F3705A" />
                    <size android:width="256dp" android:height="64dp" />
                    <corners android:radius="30dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>