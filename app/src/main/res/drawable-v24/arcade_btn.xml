<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <!-- SHADOW LAYER -->
            <item android:top="4dp">
                <shape android:shape="rectangle">
                    <solid android:color="#CF9001" />
                    <corners android:radius="30dp"/>
                </shape>
            </item>
            <!-- CONTENT LAYER -->
            <item android:bottom="5dp" android:right="0dp">
                <shape>
                    <gradient
                        android:startColor="#FFC12B"
                        android:centerColor="#FFEF81"
                        android:endColor="#FFC12B"/>
                    <size
                        android:width="256dp"
                        android:height="64dp" />
                    <corners android:radius="30dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>