<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/game_root_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layoutUpper"
        android:layout_centerInParent="true"
        android:id="@+id/viewOfAllGameBtns">


        <LinearLayout
            android:id="@+id/arcade_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"

            android:orientation="vertical"
            android:visibility="invisible">

            <TextView
                android:id="@+id/tvTimer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="5dp"
                android:layout_marginTop="10dp"
                android:text=""
                android:textColor="@color/primaryTextColor"
                android:textSize="24sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:layoutDirection="locale"
                android:textDirection="locale">

                <TextView
                    android:id="@+id/tvScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/score"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvActualScore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text=""
                    android:textColor="@color/blue"
                    android:textSize="30sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>


        <TextView
            android:id="@+id/tvTheTargetNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/arcade_container"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:textSize="55sp"
            android:textColor="@color/primaryTextColor"
            />

        <LinearLayout
            android:id="@+id/btn_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTheTargetNumber"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <com.nex3z.togglebuttongroup.SingleSelectToggleGroup
                android:id="@+id/group_choices_of_numbers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tbgChildSpacingForLastRow="align"
                app:tbgRowSpacing="5dp">

                <ToggleButton
                    android:id="@+id/btn1"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_margin="15dp"
                    android:background="@drawable/game_qube_btns"
                    android:fontFamily="@font/robotoslab_bold"
                    android:padding="5dp"
                    android:stateListAnimator="@null"
                    android:textColor="#fff"
                    android:textOff=""
                    android:textOn=""
                    android:textSize="40sp" />

                <ToggleButton
                    android:id="@+id/btn2"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_margin="15dp"
                    android:background="@drawable/game_qube_btns"
                    android:fontFamily="@font/robotoslab_bold"
                    android:padding="5dp"
                    android:stateListAnimator="@null"
                    android:textColor="#fff"
                    android:textOff=""
                    android:textOn=""
                    android:textSize="40sp" />

                <ToggleButton
                    android:id="@+id/btn3"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_margin="15dp"
                    android:background="@drawable/game_qube_btns"
                    android:fontFamily="@font/robotoslab_bold"
                    android:padding="5dp"
                    android:stateListAnimator="@null"
                    android:textColor="#fff"
                    android:textOff=""
                    android:textOn=""
                    android:textSize="40sp" />

                <ToggleButton
                    android:id="@+id/btn4"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_margin="15dp"
                    android:background="@drawable/game_qube_btns"
                    android:fontFamily="@font/robotoslab_bold"
                    android:padding="5dp"
                    android:stateListAnimator="@null"
                    android:textColor="#fff"
                    android:textOff=""
                    android:textOn=""
                    android:textSize="40sp" />
            </com.nex3z.togglebuttongroup.SingleSelectToggleGroup>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/operators_layot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp">

            <com.nex3z.togglebuttongroup.SingleSelectToggleGroup
                android:id="@+id/group_choices_of_operators"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ToggleButton
                    android:id="@+id/tbPlus"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/selector_plus_img"
                    android:tag="plus"
                    android:textOff=""
                    android:textOn="" />

                <ToggleButton
                    android:id="@+id/tbMinus"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/selector_minus_img"
                    android:tag="minus"
                    android:textOff=""
                    android:textOn="" />

                <ToggleButton
                    android:id="@+id/tbMultiply"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/selector_multipliction_img"
                    android:tag="mul"
                    android:textOff=""
                    android:textOn="" />

                <ToggleButton
                    android:id="@+id/tbDivide"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/selector_division_img"
                    android:tag="div"
                    android:textOff=""
                    android:textOn="" />


            </com.nex3z.togglebuttongroup.SingleSelectToggleGroup>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layoutUpper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/ibtnBack"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@color/Transparent"
            android:src="@drawable/ic_back_game" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layoutDirection="rtl"
            android:padding="5dp">

            <ImageButton
                android:id="@+id/ibtnRestartLevel"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginEnd="5dp"
                android:background="@color/Transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_restart" />

            <ImageButton
                android:id="@+id/ibtnHint3"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="7dp"
                android:background="@color/Transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_help" />

            <ImageButton
                android:id="@+id/ibtnHint2"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="7dp"
                android:background="@color/Transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_help" />

            <ImageButton
                android:id="@+id/ibtnHint1"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="7dp"
                android:background="@color/Transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_help" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/hints_left"
                android:id="@+id/tvHintsLeft"
                android:textColor="#000"
                android:gravity="center|start"
                />


        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/hiding_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffff"
android:visibility="gone"
        >

        <ImageView
            android:id="@+id/ivCountdown"
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:layout_centerInParent="true"
            android:layout_margin="5dp"
            android:background="@drawable/ic_three"
            android:focusable="true" />
    </RelativeLayout>


</RelativeLayout>